    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper" ref="objectMapper"/>
            </bean>

        </mvc:message-converters>
    </mvc:annotation-driven>


    <bean id="objectMapper" class="com.bingkun.haoduoke.admin.pc.factory.ObjectMapperFactory"
          factory-method="getMapper"/>

    <mvc:resources mapping="/lib/**" location="/lib/"/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!--注册\登录\重置密码 页面-->
            <mvc:exclude-mapping path="/login/"/>
            <mvc:exclude-mapping path="/user/loginWeb"/>
            <mvc:exclude-mapping path="/reset/"/>
            <mvc:exclude-mapping path="/register/"/>
            <mvc:exclude-mapping path="/login"/>
            <mvc:exclude-mapping path="/reset"/>
            <mvc:exclude-mapping path="/register"/>

            <!--注册\登录\重置密码 需要用到的服务-->
            <mvc:exclude-mapping path="/user/changePassword"/>
            <mvc:exclude-mapping path="/user/register"/>
            <mvc:exclude-mapping path="/user/checkMobile"/>
            <mvc:exclude-mapping path="/user/sendVerifyCode"/>
            <mvc:exclude-mapping path="/user/checkVerifyCode"/>
            <mvc:exclude-mapping path="/user/checkAccount"/>
            <mvc:exclude-mapping path="/user/login"/>
            <mvc:exclude-mapping path="/user/getAttemptCount"/>
            <mvc:exclude-mapping path="/region/load"/>
            <!--<mvc:exclude-mapping path="/user/authorizationLogin"/>-->
            <!--<mvc:exclude-mapping path="/user/switchBrand"/>-->


            <!--后门-->
            <mvc:exclude-mapping path="/user/testAuthority"/>
            <mvc:exclude-mapping path="/user/loginTest"/>
            <mvc:exclude-mapping path="/user/loginGo"/>
            <mvc:exclude-mapping path="/user/backDoor"/>
            <mvc:exclude-mapping path="/user/loginBackDoor"/>
            <mvc:exclude-mapping path="/user/getCode"/>
            <!--BI报表-->
          <!--  <mvc:exclude-mapping path="/report/biReport"/>-->
            <mvc:exclude-mapping path="/heartbeat"/>



            <mvc:exclude-mapping path="/lib/**"/>

            <bean class="com.bingkun.haoduoke.admin.pc.interceptor.UserContextInterceptor"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/lib/**"/>
            <mvc:exclude-mapping path="/heartbeat"/>
            <bean class="com.bingkun.haoduoke.admin.pc.interceptor.AuthorizeInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>
